{
    "name": "dambrogia/candlestick",
    "description": "A PHP OOP approach to candlesticks for trading.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Dominic Dambrogia",
            "email": "domdambrogia@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {},
